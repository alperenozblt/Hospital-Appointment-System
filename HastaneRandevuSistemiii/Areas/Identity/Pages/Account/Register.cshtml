@page
@model RegisterModel
@{
    ViewData["Title"] = "KAYIT OL!";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">@ViewData["Title"]</h1>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Input.KullaniciAd" class="form-label">Kullanıcı Adı</label>
                    <input asp-for="Input.KullaniciAd" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.KullaniciAd" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.KullaniciSoyad" class="form-label">Kullanıcı Soyadı</label>
                    <input asp-for="Input.KullaniciSoyad" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.KullaniciSoyad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.TcNo" class="form-label">TC No</label>
                    <input asp-for="Input.TcNo" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.TcNo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label">Şifre</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Şifreyi Doğrula</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <br />
                
                <button id="registerSubmit" type="submit" class="btn btn-primary btn-block">Kayıt Ol</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
