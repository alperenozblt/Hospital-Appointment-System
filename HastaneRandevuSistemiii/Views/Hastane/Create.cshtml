@model HastaneRandevuSistemiii.Models.Hastane

@{
	ViewData["Title"] = "Yeni Hastane Oluştur";
}
<link rel="stylesheet" href="~/css/create.css" />

<div class="container">

	<h1 class="text-center namemt-4 mb-4" name="ekle">@_localization.Getkey("Yeni Hastane Ekle").Value</h1>

	<div class="row justify-content-center">
		<div class="col-md-6 ">
			<form asp-controller="Hastane" asp-action="Create">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="HastaneAdi" class="control-label"></label>
					<input asp-for="HastaneAdi" class="form-control" />
					<span asp-validation-for="HastaneAdi" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="HastaneTel" class="control-label"></label>
					<input asp-for="HastaneTel" class="form-control" />
					<span asp-validation-for="HastaneTel" class="text-danger"></span>
				</div>
				 <div class="form-group">
				<label asp-for="HastaneAddress" class="control-label"></label>
				<input asp-for="HastaneAddress" class="form-control" />
				<span asp-validation-for="HastaneAddress" class="text-danger"></span>
			</div>
				<div class="form-group">
					<input type="submit" class="btn btn-primary" id="@_localization.Getkey("Yeni Hastane Ekle").Value" value="@_localization.Getkey("Yeni Hastane Ekle").Value"   />
				</div>

				<div>
					<a asp-action="Index" class="btn btn-primary" id="dön">@_localization.Getkey("Listeye Geri Dön").Value</a>
				</div>
			</form>
		</div>
	</div>

</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
