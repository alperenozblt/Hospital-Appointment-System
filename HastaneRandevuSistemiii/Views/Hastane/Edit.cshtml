@model HastaneRandevuSistemiii.Models.Hastane

@{
    ViewData["Title"] = "Edit";
}


<h1 name="Düzenle">@_localization.Getkey("Düzenle").Value</h1>

<h4 name="Hastane">@_localization.Getkey("Hastane").Value</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HastaneId" />
			<div class="form-group">
				<label asp-for="HastaneAdi" class="control-label"></label>
				<input asp-for="HastaneAdi" class="form-control" />
				<span asp-validation-for="HastaneAdi" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="HastaneTel" class="control-label"></label>
				<input asp-for="HastaneTel" class="form-control" />
				<span asp-validation-for="HastaneTel" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="HastaneAddress" class="control-label"></label>
				<input asp-for="HastaneAddress" class="form-control" />
				<span asp-validation-for="HastaneAddress" class="text-danger"></span>
			</div>
			<br />
			<input type="submit" class="btn btn-primary" id="@_localization.Getkey("Kaydet").Value" value="@_localization.Getkey("Kaydet").Value"   />
			<div>
				<br/>
				<a asp-action="Index" class="btn btn-primary" id="dön">@_localization.Getkey("Listeye Geri Dön").Value</a>
			</div>
		</form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
