@model HastaneRandevuSistemiii.Models.Randevu

@{
    ViewData["Title"] = "Randevu Sil";
    var kullanicilar = ViewData["Kullanıcılar"] as List<Kullanici>;
    var kullanici = kullanicilar.FirstOrDefault(x => x.Id == Model.KullaniciId);
}

<div class="container">
    <h1 class="mt-4 mb-3">Randevu Sil</h1>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.RandevuGun)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.RandevuGun)
                </dd>
                <dt class="col-sm-3">
                    Randevu Saati
                </dt>
                <dd class="col-sm-9">
                    @Model.RandevuSaat
                </dd>
                <dt class="col-sm-3">
                    Hasta
                </dt>
                <dd class="col-sm-9">
                    @kullanici.KullaniciAd @kullanici.KullaniciSoyad
                </dd>
            </dl>
        </div>

        <div class="card-footer text-right">
            <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            <form asp-action="Delete">
                <input type="hidden" asp-for="RandevuID" />
                <button type="submit" class="btn btn-danger">Sil</button>
            </form>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 960px;
        margin: 0 auto;
    }

    h1 {
        font-size: 24px;
        font-weight: 700;
        margin-top: 0;
    }

    .card {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 1rem;
        margin-bottom: 1rem;
    }

    .card-body {
    }

    .card-footer {
        background-color: #f5f5f5;
        padding: 0.75rem;
        border-top: 1px solid #ccc;
    }

    .text-right {
        text-align: right;
    }

    dt {
        font-weight: bold;
    }

    .btn {
        width: 100%;
        font-size: 16px;
        font-weight: 700;
        border-radius: 20px;
    }

    .btn-secondary {
        background-color: #ccc;
        color: #fff;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
    }
</style>
